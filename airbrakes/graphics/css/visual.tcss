            #     # background: yellow;
            #     # offset-y: 1;
            # }

            Label {
                content-align: center middle;
                text-align: center;
            }
        }
    }
}

Placeholder {
    width: auto;
    height: auto;
}


#flight-header {
    layout: grid;
    overflow-y: auto;
    grid-size: 3; /* 3 columns */
    grid-rows: auto;
    grid-gutter: 1;

    #launch-file-name {
        # background: black;
        text-align: center;
        width: 100%;
    }

    #normal-sim-time {
        text-align: center;
        width: 100%;
    }

    Button {
        min-width: 0;
        border: none;
    }

    #launch-clock {
        # background: blue;
        text-align: center;
    }

    #state {
        align: left bottom;
        content-align: left bottom;
        text-align: center;
        width: 100%;
        # background: green;
    }

    #sim-speed-panel {
        # background: green;
        Horizontal {
            align: center middle;
        }
    }
}
