[run]
# Enable branch coverage measurement
branch = True

# Source files to measure
source = airbrakes

# Patterns of files to omit from coverage
omit =
    */tests/*
    */site-packages/*
    setup.py
    airbrakes/mock/*

[paths]
source =
    src/
    */site-packages/

[report]
# Don't report files with 100% coverage
skip_covered = False

# Don't report files with no executable code
skip_empty = True

# Exclude certain lines from coverage measurement
exclude_lines =
    # Have to re-enable the standard pragma
    pragma: no cover

    # Don't complain about missing debug-only code
    def __repr__
    if self\.debug

    # Don't complain if tests don't hit defensive assertion code
    raise AssertionError
    raise NotImplementedError

    # Don't complain if non-runnable code isn't run
    if 0:
    if __name__ == .__main__.:

# Show line numbers in report
show_missing = True

# Minimum allowed coverage percentage
fail_under = 80
